#:import Factory kivy.factory.Factory

<Widget>:
	font_name:'res/fonts/Roboto-Medium.ttf'

<TopActionBar>:

	id: top_action_bar

	ActionView:
	    id: top_action_view

	    ActionPrevious:
	        id: top_action_previous
	        with_previous: False
	        app_icon: 'res/icons/nu.png'
	        title: app.get_string('Main_Title')
	        background_down: 'atlas://data/images/defaulttheme/action_item'
	        on_release: app.open_settings()

	    ActionButton:
	        id: top_action_button
	        background_down: 'atlas://data/images/defaulttheme/action_item'
	        text: app.get_string("Settings")
	        on_release: app.open_settings()
